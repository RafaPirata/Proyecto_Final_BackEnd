<div class="form-group col-4 mx-auto my-2 w-25 border p-3 bg-dark bg-gradient text-white bg-opacity-75">
    <form action="/" method="post">
        <fieldset>
            <h4 class="d-block mx-auto my-2 text-center">New Product</h4>
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="title" class="form-control" placeholder="Title Product" >
            <br>
            <label for="descripcion">Descripcion</label>
            <input type="text" name="descripcion" id="descripcion" class="form-control" placeholder="descripcion" >
            <br>        
            <label for="codigo">Codigo</label>
            <input type="text" name="codigo" id="codigo" class="form-control" placeholder="codigo" >
            <br>
            <label for="precio">Price ($)</label>
            <input type="number" name="precio" id="price" class="form-control" placeholder="Ej. 150" >
            <br>
            <label for="foto">Foto</label>
            <input type="text" name="foto" id="thumbnail" class="form-control" placeholder="foto" >
            <br>
            <label for="stock">Stock ($)</label>
            <input type="text" name="stock" id="stock" class="form-control" placeholder="Ej. 15" >
            <br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mx-auto">Save Product <i class="fa fa-save"></i></button>
                <button type="reset" class="btn btn-danger mx-auto">Reset</button>
            </div>
        </fieldset>
    </form>
</div>